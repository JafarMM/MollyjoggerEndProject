@model LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<main id="LoginPage" style="background-image: url(https://images.unsplash.com/photo-1562506151-f8490e521c0a?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=750&q=80); padding-top: 80px; padding-bottom: 20px; background-size: 1400px; background-repeat: no-repeat; ">
    <h2>
        LOGIN
    </h2>
    <div class="container">
        <div class="LoginPage">
            <div asp-validation-summary="ModelOnly"></div>
            <form method="post">
                <div class="form-group">
                    <label style="color: white; " asp-for="Email"></label>
                    <input asp-for="Email" type="email" class="form-control" placeholder="Enter Your Email" />
                    <span class="text-danger" asp-validation-for="Email"></span>
                </div>
                <div class="form-group">
                    <label style="color:white;" asp-for="Password"></label>
                    <input asp-for="Password" type="password" class="form-control" placeholder="Enter Your Password" />
                    <span class="text-danger" asp-validation-for="Password"></span>
                </div>
                <div class="forgotpassword">
                    <input asp-for="RememberMe">
                    <label style="color:black;" asp-for="RememberMe">Remember me?</label>
                    <a asp-action="RedirectionToResetPassword" style="color:black;">Forgot your password?</a>
                </div>
                <button type="submit" class="btn btn-primary">Sign In</button>
                @*button to return to the main page*@
                <a  asp-controller="Home" asp-action="Index" style="text-decoration: none; color: white; ">Return to Store</a>
                <hr>
                @*To create a new account if you do not have a login*@
                <a style="text-decoration: none; color: white;" id="CreateAccount" asp-controller="Account" asp-action="Register">Create Account</a>
            </form>
        </div>
    </div>

</main>