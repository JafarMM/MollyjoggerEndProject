@model RegisterViewModel 
@{
    ViewData["Title"] = "Register";
}

<main style="background-image: url(https://images.unsplash.com/photo-1562506151-f8490e521c0a?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=750&q=80); padding-top: 80px; padding-bottom: 20px; background-size: 1500px; background-repeat: no-repeat;">
<h2>
    Create Account
</h2>
<div class="container">
    <div class="LoginPage">
        <div asp-validation-summary="ModelOnly"></div>
        <form method="post">

            <div class="form-group">
                <label asp-for="Fullname" style="color:white"></label>
                <input type="text" asp-for="Fullname" class="form-control" placeholder="Enter Your First Name" />
                <span class="text-danger" asp-validation-for="Fullname"></span>
            </div>
            <div class="form-group">
                <label asp-for="Username" style="color:white"></label>
                <input type="text" asp-for="Username" class="form-control" placeholder="Enter Your Last Name" />
                <span class="text-danger" asp-validation-for="Username"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" style="color:white"></label>
                <input type="email" asp-for="Email" class="form-control" placeholder="Enter Your Email" />
                <span class="text-danger" asp-validation-for="Email"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" style="color:white"></label>
                <input type="password" asp-for="Password" class="form-control" placeholder="Enter Your Password" />
                <span class="text-danger" asp-validation-for="Password"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword" style="color:white"></label>
                <input type="password" asp-for="ConfirmPassword" class="form-control" placeholder="Repeat Your Password" />
                <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
            </div>

            <button id="Create" type="submit" class="btn btn-primary">Create</button>
            <a asp-controller="Shop" style="color:black; text-decoration:none;">
                <p style="color: white">Return to Store</p>
            </a>
        </form>
    </div>
</div>
 
</main>