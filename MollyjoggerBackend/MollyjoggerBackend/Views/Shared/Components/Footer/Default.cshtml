@model Bio 
 <!--Footer start-->
<footer>
    <div class="container-fluid">
        <div class="firstpartfooter">
            <div class="row">
                <div class="col-md-3 col-sm-12">
                    <div class="footerlogo">
                        <img src="~/Images/footerimages/@Model.Logofooter" alt="">
                    </div>
                </div>
                <div class="col-md-3 col-sm-12">
                    <div class="footeremail">
                        <h4>NEWSLETTER</h4>
                        <p>
                            Subscribe for exclusive offers,special <br>
                            events and a good tall fish tale or two.
                        </p>
                        <div class="emailinput">
                            <form id="subscribe-form" name="mc-embedded-subscribe-form" class="validate" target="_blank" novalidate>
                                <div id="mc_embed_signup_scroll" class="mc-form">
                                    @if (!User.Identity.IsAuthenticated)
                                    {
                                        <input class="email-input" type="email" aria-label="Email" placeholder="Email" name="EMAIL" id="Email-subscribe">
                                    }
                                    
                                    <button name="subscribe" type="button" id="button-subscribe" role="button" aria-label="SIGN UP">SIGN UP</button>
                                </div>
                                <div style="text-align:center; color:red !important" id="response-subscribe"></div>
                            </form>
                      
                        </div>
                    </div>
                </div>
                <div class="col-md-3 col-sm-12">
                    <div class="footerlinks">
                        <h4>LINKS</h4>
                        <ul>
                            <li><a asp-controller="Shop">Shop</a></li>
                            <li><a asp-controller="About">About Us</a></li>
                            <li><a asp-controller="Home" asp-action="ContactUs">Contact</a></li>
                            <li><a href="termsofservice.html">Terms</a></li>
                            <li><a href="#">Privacy</a></li>
                            <li><a asp-controller="ReturnForm">Returns</a></li>
                        </ul>
                    </div>

                </div>
                <div class="col-md-3 col-sm-12">
                    <div class="footercontact">
                        <h4>GET IN TOUCH</h4>
                        <p>Contact us <a href="#">info@mollyjogger.com</a></p>
                        <div class="socialmedia">
                            <ul>
                                <li><a href="@Model.FacebookLink" target="_blank"><img src="~/Images/footerimages/socialmedia/facebook.svg" alt=""></a></li>
                                <li><a href="@Model.InstagramLink" target="_blank"><img src="~/Images/footerimages/socialmedia/instagram.svg" alt=""></a></li>
                                <li><a href="@Model.PinterestLink" target="_blank"><img src="~/Images/footerimages/socialmedia/pinterest.svg" alt=""></a></li>
                            </ul>

                        </div>
                        <div class="footeraddress">
                            <img src="~/Images/footerimages/@Model.FooterAddressImg" alt="">
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="secondpartfooter">
            <div class="row">
                <p>Accepted Payments</p>
            </div>
            <div class="row">
                <div class="bankcards">
                    <img src="~/Images/footerimages/bankcards/amex.svg" alt="">
                    <img src="~/Images/footerimages/bankcards/credit-card.svg" alt="">
                    <img src="~/Images/footerimages/bankcards/dinners-club.svg" alt="">
                    <img src="~/Images/footerimages/bankcards/discover.svg" alt="">
                    <img src="~/Images/footerimages/bankcards/jcb.svg" alt="">
                    <img src="~/Images/footerimages/bankcards/paypal.svg" alt="">
                    <img src="~/Images/footerimages/bankcards/shopify.svg" alt="">
                </div>
            </div>
            <div class="row">
                <p>
                    © 2021, <a asp-controller="Home" asp-action="ContactUs">Mollyjogger</a> | Site by <a href="www.github.com/JafarMM" target="_blank">Jafar Mamedzade.</a>  
                </p>
            </div>
        </div>
    </div>
</footer>
<!--Footer end-->