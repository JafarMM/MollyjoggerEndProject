
@{
    ViewData["Title"] = "Index";
    List<SliderImages> sliderImages = Model;
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Slider Images</h4>
                <a asp-action="Create"  class="btn btn-primary">Create</a>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Image</th>
                                <th>Actions</th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var sliderImage in sliderImages)
                            {
                                <tr>
                                    <td>
                                        <img src="~/Images/@sliderImage.Image" style="width:200px !important; height:200px !important;" />
                                    </td>
                                    <td>
                                        <a asp-action="Details" asp-route-id="@sliderImage.Id" class="btn btn-info">Details</a>
                                        <a asp-action="Update" asp-route-id="@sliderImage.Id" class="btn btn-warning">Update</a>
                                        <a asp-action="Delete" asp-route-id="@sliderImage.Id" class="btn btn-danger">Delete</a>
                                    </td>
                                </tr>

                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

