@model Category
@{
    ViewData["Title"] = "Delete";
    Category category = Model;
}

<div class="row">
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <p class="text-danger">Do you want to delete this category?</p>
                <br />
                <a asp-action="Index" class="btn btn-primary">Go to Back</a>
                <br />
                <form method="post">
                    <button type="submit" class="btn btn-danger mr-2">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>
 